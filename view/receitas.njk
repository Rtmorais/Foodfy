{% extends "layout.njk" %}
   
   {% block content %}
    <main>
        <div class="cards">
           
            {% for recipe in recipes %}
            <div class="card" id="{{loop.index -1}}">
                <img src="{{recipe.image}}" alt="{{recipe.title}}">
                <h1>{{recipe.title}}</h1>
                <h2>{{recipe.author}}</h2>
            </div> 
            {%endfor%}
    </main>
 
    {% endblock content%}